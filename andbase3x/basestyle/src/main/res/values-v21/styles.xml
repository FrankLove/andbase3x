<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ActionBar的颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- 随主题而改变的颜色（如CheckBox的颜色） -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- 状态栏文字的颜色  -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <!-- 状态栏透明  -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Menu文字的颜色  -->
        <item name="actionMenuTextColor">@color/textColorPrimary</item>

        <!-- 默认返回的颜色  -->
        <item name="colorControlNormal">@android:color/white</item>

        <!--Activity切换动画  21以上支持
        startActivity(intent,ActivityOptions.makeSceneTransitionAnimation(this).toBundle());
        -->

        <item name="android:windowExitTransition">@transition/slide</item>
        <item name="android:windowEnterAnimation">@transition/slide</item>
        <item name="android:windowReenterTransition">@transition/slide</item>

    </style>

</resources>
